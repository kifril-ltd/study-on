{% extends 'base.html.twig' %}

{% block title %}StudyOn{% endblock %}

{% block actions %}
    <a class="btn btn-success add-course-link" href="{{ path('app_course_new') }}">Добавть курс</a>
{% endblock %}

{% block body %}
    <h1>Список курсов</h1>

    <div class="d-flex justify-content-between align-items-stretch flex-wrap">
        {% for course in courses %}
            <div class="card my-2 course-card">
                <div class="card-header">
                    {{ course.name }}
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p class="card-text">{{ course.description }}</p>
                    <a href="{{ path('app_course_show', {'id': course.id}) }}" class="btn btn-primary course-link">Перейти к курсу</a>
                </div>
            </div>
        {% else %}
            <p class="card-text">Нет доступных курсов</p>
        {% endfor %}
    </div>



{% endblock %}
