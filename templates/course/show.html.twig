{% extends 'base.html.twig' %}

{% block title %}{{ course.name }} / StudyOn{% endblock %}

{% block actions %}
    <div class="d-flex">
        <a class="btn btn-primary mx-1" href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>
        <a class="btn btn-success mx-1" href="{{ path('app_course_add_lesson', {'course': course.id}) }}">Добавить урок</a>
        {{ include('course/_delete_form.html.twig') }}
        <a class="btn btn-info mx-1" href="{{ path('app_course_index') }}">Вернуться к списку курсов</a>
    </div>
{% endblock %}

{% block body %}
    <div class="card my-5">
        <div class="card-body">
            <h5 class="card-title">{{ course.name }}</h5>
            <p class="card-text">{{ course.description }}</p>
        </div>
        <ol class="list-group list-group-flush">
            {% for lesson in course.lessons %}
                <li class="list-group-item"><a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ loop.index }}. {{ lesson.name }}</a></li>
            {% else %}
                <div>Список пуст!</div>
            {% endfor %}
        </ol>
    </div>
{% endblock %}
