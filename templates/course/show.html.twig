{% extends 'base.html.twig' %}

{% block title %}{{ course.name }}{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Название</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Описание</th>
                <td>{{ course.description }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table">
        <thead>
        <tr>
            <th>Номер</th>
            <th>Название</th>
        </tr>
        </thead>
        <tbody>
        {% for lesson in course.lessons|sort((a, b) => a.number <=> b.number)%}
            <tr>
                <td>{{ lesson.number }}</td>
                <td><a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Список пуст</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <hr>
    <a href="{{ path('app_course_index') }}">Вернуться к списку курсов</a>

    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать курс</a>
    <a href="{{ path('app_lesson_new', {'course': course.id}) }}">Добавить урок</a>

    {{ include('course/_delete_form.html.twig') }}
{% endblock %}
